@{ var transaccion = (Transaccion)Model; }
<h1>Crear transaccion a la cuenta </h1>
<div class="row">
    <div class="col-6">
        <form action="/transaccion/crear" method="post">
            @if (ViewBag.Mensaje != null)
	        {
                <div id="Incorrecto" class="alert alert-danger">
                    @ViewBag.Mensaje
                </div>
            }
            <input type="hidden" name="IdCuenta" value="@ViewBag.CuentaId" />
            <div class="form-group">
                <label>Tipo</label>
                <select name="IdTipo" class="form-control">
                    <option value="">-- Selecciona una opcion --</option>
                    <option value="1">Ingreso</option>
                    <option value="2">Gasto</option>
                </select>
                @Html.ValidationMessage("IdTipo")
            </div>
            <div class="form-group">
                <label>Descripcion</label>
                <textarea class="form-control" name="Descripcion"></textarea>
                @Html.ValidationMessage("Descripcion")
            </div>
            <div class="form-group">
                <label>Monto</label>
                <input type="number" class="form-control" name="Monto" />
                @Html.ValidationMessage("Descripcion")
            </div>
            <button class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>